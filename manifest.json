{
  "manifest_version": 3,
  "name": "MEET.AI",
  "version": "1.0",
  "description": "AI-powered scheduling for high-volume hiring",
  "permissions": [
    "storage",
    "identity"
  ],
  "oauth2": {
    "client_id": "Your_Google_OAuth2.0_Client_ID",
    "scopes": ["https://www.googleapis.com/auth/calendar"]
  },
  "action": { 
    "default_popup": "popup.html", 
    "default_icon": "icon.png" 
  },
  "background": { "service_worker": "background.js" },
  "icons": { "128": "icon.png" }
}
